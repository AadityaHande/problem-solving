class Solution {
  public:
    void segregateElements(vector<int>& arr) {
        // Your code goes here
        int n = arr.size();
        vector<int> pos, neg;

        for (int i = 0; i < n; i++) {
            if (arr[i] >= 0)
                pos.push_back(arr[i]);
            else
                neg.push_back(arr[i]);
        }

        int index = 0;
        for (int x : pos)
            arr[index++] = x;
        for (int x : neg)
            arr[index++] = x;
    }
};